<%= form_for(@user) do |f| %>


    <div class="field">
      <%= f.label :firstname %><br />
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label :lastname%><br />
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label :sex%><br />
      <%= f.select "sex", options_for_select([ "Male", "Female" ], "Male") %>
    </div>
    <div class="field">
      <%= f.label :mobileno%><br />
      <%= f.text_field :mobileno %>
    </div>
    <div class="field">
      <%= f.label :address%><br />
      <%= f.text_area :address %>
    </div>
    <div class="field">
      <%= f.label :passportno%><br />
      <%= f.text_field :passportno %>
    </div>
    <div class="field">
      <%= f.label :pancardno%><br />
      <%= f.text_field :pancardno %>
    </div>
    <div class="actions">
      <%= f.submit "submit" %>
    </div>
<% end %>
<%= link_to 'Back', :action=>'show' %>