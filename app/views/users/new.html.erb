<h1>New User</h1>

<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>Form is invalid</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <table class="center">
      <tr>
        <td style="text-align: right;">
          <%= f.label :name %>:</td><td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;">
          <%= f.label :email %>:</td><td>
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;">
          <%= f.label :password %>:</td><td>
          <%= f.password_field :password %>
        </td>
      </tr>
      <tr>
        <td style="text-align: right;">
          <%= f.label :password_confirmation %>:</td><td>
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>


    </table>
    <table class="center">
      <tr>
        <td>
          <%= f.submit %>
        </td>
      </tr>
    </table>
<% end %>
